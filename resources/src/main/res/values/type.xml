<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HomeTabTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/default_typeface_regular</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TitleAppearance">
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:fontFamily">@font/default_typeface_medium</item>
    </style>

    <style name="QuizQuestion">
        <item name="android:fontFamily">@font/default_typeface_regular</item>
        <item name="android:textColor">@color/text_color_question</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="QuizQuestion.Code">
        <item name="android:fontFamily">@font/default_typeface_light</item>
        <item name="android:textColor">@color/text_color_code</item>
    </style>

    <style name="DarkBoldAppearance">
        <item name="android:fontFamily">@font/default_typeface_bold</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="DarkMediumAppearance">
        <item name="android:fontFamily">@font/default_typeface_medium</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="DarkRegularAppearance">
        <item name="android:fontFamily">@font/default_typeface_regular</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="DarkLightAppearance">
        <item name="android:fontFamily">@font/default_typeface_light</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="HintAppearance" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_12</item>
    </style>
</resources>